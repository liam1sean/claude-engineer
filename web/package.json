{
  "name": "claude-engineer-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "dev:css": "tailwindcss -i ./public/styles.css -o ./public/tailwind.css --watch",
    "build:css": "tailwindcss -i ./public/styles.css -o ./public/tailwind.css --minify",
    "build": "npm run build:css",
    "test": "vitest run"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vitest": "^2.0.0",
    "supertest": "^7.0.0"
  }
}
